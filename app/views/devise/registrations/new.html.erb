<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col">
      <div class="card mb-4 rounded-3 shadow-sm">
        <div class="card-header py-3">
          <h4 class="my-0 fw-normal text-center">Регистрация</h4>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'you@example.com' %>
            </div>

            <div class="field">
              <%= f.label :password, 'Пароль' %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> символов минимум)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %><br />
            </div>

            <div class="actions">
              <%= f.submit "Зарегистрироваться", class: "w-100 btn btn-lg btn-outline-primary" %><br />
            </div>
          <% end %>
          <br />
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
    <div class="col"></div>
  </div>
</div>

