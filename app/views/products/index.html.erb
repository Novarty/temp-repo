<div class="album py-5 bg-light">
    <div class="container">
      <h1>Каталог изделий</h1>
      <hr>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @products.each do |product| %>
          <div class="col">
            <div class="card shadow-sm">
              <%= image_tag('bread') %>
              <div class="card-body">
                <h4 class="fw-bold"><%= product.name %></h4>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to 'Подробнее', product_path(product), class: 'btn btn-sm btn-outline-secondary' %>
                    <% if current_user.admin? %>
                      <%= link_to 'Изменить', edit_product_path(product), class: 'btn btn-sm btn-outline-secondary' %>
                    <% end %>
                  </div>
                  <small class="text-muted">Цена: <%= product.price %> руб.</small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
