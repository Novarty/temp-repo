<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <p>
      <%= form.label :name, 'Название' %>
      <%= form.text_field :name, class: 'form-control' %>
    </p>

    <p>
      <%= form.label :description, 'Описание' %>
      <%= form.text_area :description, rows: 5, class: 'form-control' %>
    </p>

    <p>
      <%= form.label :price, 'Цена' %>
      <%= form.number_field :price, in: 1.0..20.0, step: 0.5, class: 'form-control' %>
    </p>

    <p>
      <%= form.label :weight, 'Вес (кг)' %>
      <%= form.number_field :weight, step: :any, class: 'form-control' %>
    </p>

    <p>
      <%= form.label :expiration_days, 'Срок годности (дней)' %>
      <%= form.number_field :expiration_days, class: 'form-control' %>
    </p>

    <p>
      <%= form.label :composition, 'Состав' %>
      <%= form.text_area :composition, class: 'form-control' %>
    </p>

    <div class="d-flex justify-content-between align-items-center">
      <%= form.submit 'Сохранить изменения', class: "btn btn-outline-success" %>
      <%= link_to 'Назад', products_path, class: 'btn btn-sm btn-outline-secondary' %>
    </div>
  </div>
<% end %>
